<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".VehicleInsurance">

    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/DarkBlue"
        android:title="City Rider"
        android:navigationIcon="@drawable/baseline_arrow_back"
        android:titleTextColor="@color/white"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vehicle Insurance"
                    android:textSize="24.00sp"
                    android:fontFamily="@font/poppins"
                    android:textStyle="bold"
                    android:layout_marginStart="10.00dp"
                    android:layout_marginTop="10.00dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/insurance"
                    android:textSize="15.00sp"
                    android:layout_marginEnd="10.00dp"
                    android:fontFamily="@font/poppins"
                    android:layout_marginStart="10.00dp"
                    android:layout_marginTop="10.00dp"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="280.00dp"
                    android:src="@drawable/insurance"
                    android:layout_marginTop="15.00dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15.00dp"
                    android:text="Upload Vehicle Insurance"
                    android:textSize="18.00sp"
                    android:layout_marginStart="15.00dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/bg_otp"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="10.00dp">

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:src="@drawable/image" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="choose from gallery "
                            android:textColor="@color/DarkBlue"
                            android:padding="5dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="or"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" open camera"
                            android:textColor="@color/DarkBlue"
                            android:padding="5dp"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/TakePhotoBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16.00dp"
                android:layout_marginBottom="70.00dp"
                android:background="@drawable/bg_btn"
                android:text="Next"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="@dimen/_10sdp"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>